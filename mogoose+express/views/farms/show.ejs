<%- layout('./layouts/boilerplate') %>
    <h1>Farm Details</h1>
    <p>
        <b> Name: </b> <%= farm.name %> <br>
        <b> City: </b> <%= farm.city %> <br>
        <b> Email: </b> <%= farm.email %> <br>
        <b> Products:</b>  
        <ul>
            <% for(let p of farm.products) {%>
                <li><a href="/products/<%=p.id%>"><%= p.name %></a></li>
            <%} %>
        </ul>
    </p>
    <a href="/farms/<%=farm._id%>/products/new">Add Product</a>
    <a href="/farms">All Farms</a>