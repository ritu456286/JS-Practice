<%- layout('./layouts/boilerplate') %>
    <h1><%= farm.name.toUpperCase() %></h1>
    <hr>
    <h3>Add Product</h3>
    <form action="/farms/<%=farm._id%>/products" method="post">
        <label for="name">Enter Product Name: </label>
        <input type="text" id="name" name="name" placeholder="Product Name">
        <br>
        <label for="price">Enter Product Price: </label>
        <input type="number" id="price" name="price" placeholder="Product Price">
        <br>
        <label for="category">Enter Product Category: </label>
        <select name="category" id="category">
            <% for (let category of categories) {%>
                <option value="<%=category%>"><%=category%></option>
            <%}%>
        </select>
        <br><br>
        <button class="btn btn-success">Submit</button>
    </form>
    <hr>
    <a href="/farms/<%=farm.id%>">Back to Farm</a>
